<%= simple_form_for :registration, :url => registration_path do |form| %>
  <fieldset class="fields">
    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>
    
    <div class="field">
      <%= form.label :media %>
      <%= form.text_field :media %>
    </div>
    
    <div class="field">
      <%= form.label :country %>
      <%= form.text_area :country %>
    </div>

    <div class="field">
      <%= form.label :email %>
      <%= form.text_area :email %>
    </div>
  </fieldset>
  
  <fieldset class="actions">
    <%= form.submit "Register" %>
  </fieldset>
<% end %>