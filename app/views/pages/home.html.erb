<body class="<%= @home_page ? 'homepage' : ''%>">

<div class="container">
	<div class="jumbotron">

		<h1>
			Realising <strong>the true impact</strong> of asthma
		</h1>

		<p><i>
			 European Respiratory Society (ERS) Annual Congress 2013
		</p>

		<p>
			Tuesday 10 September, 14:30 â€“ 15:15 CET
		</i></p>
			
			<h3>FOR EUROPEAN MEDIA ONLY</h3>

			<h4>Please register below to participate in the online media briefing.</h4>

</div>

<br>

<div class="marketing span6">

	<div id="flash_notice" style="display:none"></div>
		<%= simple_form_for :registration, :url => registration_path do |form| %>
		<%= form.error_notification %>
		  <fieldset class="fields">
		    <div class="field">
		      <%= form.label 'Name' %>
		      <%= form.text_field :name %>
		    </div>

		    <div class="field">
		      <%= form.label 'Media Outlet' %>
		      <%= form.text_field :media %>
		    </div>

		    <div class="field">
		      <%= form.label 'Country' %>
		      <%= form.text_field :country %>
		    </div>
		    
		    <div class="field">
		      <%= form.label 'E-mail' %>
		      <%= form.text_field :email%>
		    </div>
		  </fieldset>
		  	
		  	<div class="field">
				<%= form.input :journalist, :as => :boolean, :required => true, label: "Please tick to confirm you are a journalist." %>
			</div>		  
		  <br>
		  <fieldset class="actions">
		    <%= form.submit "Register", class: 'btn btn-primary btn-large' %>
		  </fieldset>
		</div>
	<% end %>

</div>		

<%= yield %>
</body>	
